<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Wifi_match_warp" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WifiText" parent="Wifi_match_warp">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_wifi</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WifiButton" parent="Wifi_match_warp">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@android:color/holo_purple</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
